{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "rules": {
    "arrow-body-style": 0,
    "arrow-parens": [2, "always"],
    "class-methods-use-this": 0,
    "curly": [2, "all"],
    "indent": [2, 2, { "SwitchCase": 1 }],
    "no-console": 0,
    "no-plusplus": 0,
    "no-underscore-dangle": [2, { "allowAfterThis": true, "allowAfterSuper": true }],

    "import/named": 2
  },
  "env": {
    "browser": true
  },
  "globals": {
    "Logger": true
  }
}
